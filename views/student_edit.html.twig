<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css'>
        <title>Uni Regi</title>
    </head>
    <body>
        <div class='container'>
            <h1>Update the {{ student.getDescription }} student</h1>

            <form action='/students/{{ student.getId }}' method='post'>
                <input name='_method' type='hidden' value='patch'>

                <label for='description'>Rename your student:</label>
                <input id='description' name='description' type='text'>

                <button type='submit'>Update</button>
            </form>
            <form action='/students/{{ student.getId }}' method='post'>
                <input name='_method' type='hidden' value='delete'>
                <button type=submit>Delete this student</button>
            </form>
        </div>
    </body>
</html>
